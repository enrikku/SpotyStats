---
import "../styles/global.css";
import MainLayout from "../layouts/MainLayout.astro";
import MiniCard from "../components/home/MiniCard.astro";
import MiniCard2 from "../components/home/MiniCard2.astro";
---

<MainLayout content={{ title: "Inicio - Spotify Stats" }}>
  <div
    class="flex flex-col gap-6 sm:gap-8 max-w-6xl mx-auto px-4 pb-8 sm:pb-10"
  >
    <div class="text-center">
      <h1 class="text-3xl sm:text-4xl font-bold mb-3 sm:mb-4">
        Bienvenido a SpotyStats
      </h1>
      <p class="text-base sm:text-lg text-base-content/70">
        Descubre tus estadísticas musicales más interesantes
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
      <!-- Tarjeta de Top Artistas -->
      <MiniCard
        title="Top Artistas"
        description="Explora tus artistas más escuchados en diferentes períodos de tiempo"
        href="/topartists"
      />

      <!-- Tarjeta de Top Canciones -->
      <MiniCard
        title="Top Canciones"
        description="Descubre tus canciones favoritas y crea playlists personalizadas"
        href="/toptracks"
      />

      <!-- Tarjeta de Top Géneros -->
      <MiniCard
        title="Top Géneros"
        description="Descubre tus canciones favoritas y crea playlists personalizadas"
        href="/topgenres"
      />
    </div>

    <div class="divider my-2 sm:my-4">Estadísticas Rápidas</div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
      <!-- Estadísticas de Artistas -->
      <div class="card bg-base-200">
        <div class="card-body p-4 sm:p-6">
          <h3 class="card-title text-base sm:text-lg">Artistas Únicos</h3>
          <div class="flex items-center gap-3 sm:gap-4">
            <div
              class="text-3xl sm:text-4xl font-bold text-primary"
              id="uniqueArtists"
            >
              -
            </div>
            <p class="text-sm sm:text-base text-base-content/70">
              artistas diferentes en tu top
            </p>
          </div>
        </div>
      </div>

      <!-- Estadísticas de Géneros -->
      <div class="card bg-base-200">
        <div class="card-body p-4 sm:p-6">
          <h3 class="card-title text-base sm:text-lg">Géneros Diversos</h3>
          <div class="flex items-center gap-3 sm:gap-4">
            <div
              class="text-3xl sm:text-4xl font-bold text-primary"
              id="uniqueGenres"
            >
              -
            </div>
            <p class="text-sm sm:text-base text-base-content/70">
              géneros musicales diferentes
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="divider my-2 sm:my-4">Top Artistas del Momento</div>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6"
      id="topArtistsGrid"
    >
      <!-- Los artistas se cargarán dinámicamente -->
    </div>

    <div class="divider my-2 sm:my-4">Estadísticas Detalladas</div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
      <!-- Estadísticas de Popularidad -->
      <MiniCard2
        title="Promedio de Popularidad"
        description="popularidad promedio de tus artistas"
        id="avgPopularity"
      />

      <!-- Estadísticas de Seguidores -->
      <MiniCard2
        title="Total de Seguidores"
        description="seguidores totales de tus artistas"
        id="totalFollowers"
      />
    </div>
  </div>

  <script>
    await loadUniqueArtists();
    await loadUniqueGenres();

    async function loadUniqueArtists() {
      const uniqueArtistsElement = document.getElementById("uniqueArtists");

      try {
        // Ejecutamos las 3 llamadas en paralelo
        const [shortRes, mediumRes, longRes] = await Promise.all([
          fetch("/api/spotify/topartists?time_range=short_term"),
          fetch("/api/spotify/topartists?time_range=medium_term"),
          fetch("/api/spotify/topartists?time_range=long_term"),
        ]);

        // Convertimos todas al JSON también en paralelo
        const [short, medium, long] = await Promise.all([
          shortRes.json(),
          mediumRes.json(),
          longRes.json(),
        ]);

        // short, medium y long ya son arrays de artistas
        const allArtists = [...short.items, ...medium.items, ...long.items];

        // Sacamos los nombres únicos
        const uniqueArtists = new Set(allArtists.map((a) => a.name)).size;

        if (uniqueArtistsElement) {
          uniqueArtistsElement.textContent = uniqueArtists.toString();
        }

        await loadTopArtists(short.items);

        const avgPopularity =
          allArtists.reduce(
            (acc: number, artist: { popularity: number }) =>
              acc + artist.popularity,
            0
          ) / allArtists.length;
        const totalFollowers = allArtists.reduce(
          (acc: number, artist: { followers: { total: number } }) =>
            acc + artist.followers.total,
          0
        );
        const popularityElement = document.getElementById("avgPopularity");
        const followersElement = document.getElementById("totalFollowers");
        if (popularityElement)
          popularityElement.textContent = Math.round(avgPopularity).toString();
        if (followersElement)
          followersElement.textContent = totalFollowers.toLocaleString();
      } catch (e) {
        console.error("Error loading artists:", e);
      }
    }

    async function loadUniqueGenres() {
      const uniqueGenresElement = document.getElementById("uniqueGenres");

      try {
        // Ejecutamos las 3 llamadas en paralelo
        const [shortRes, mediumRes, longRes] = await Promise.all([
          fetch("/api/spotify/topgenres?time_range=short_term"),
          fetch("/api/spotify/topgenres?time_range=medium_term"),
          fetch("/api/spotify/topgenres?time_range=long_term"),
        ]);

        // Convertimos todas al JSON también en paralelo
        const [short, medium, long] = await Promise.all([
          shortRes.json(),
          mediumRes.json(),
          longRes.json(),
        ]);

        const allGenres = [...short, ...medium, ...long];
        const uniqueGenres = new Set(allGenres.map((g) => g.genre)).size;
        if (uniqueGenresElement) {
          uniqueGenresElement.textContent = uniqueGenres.toString();
        }
      } catch (e) {
        console.error("Error loading genres:", e);
      }
    }

    async function loadTopArtists(artists: any[]) {
      const topArtistsGrid = document.getElementById("topArtistsGrid");
      try {
        if (topArtistsGrid) {
          topArtistsGrid.innerHTML = artists
            .slice(0, 6)
            .map(
              (artist: any, index: number) => `
            <div class="card bg-base-200 hover:bg-base-300 transition-colors">
              <div class="card-body p-4 sm:p-6">
                <div class="flex items-center gap-3 sm:gap-4">
                  <div class="text-xl sm:text-2xl font-bold text-primary">#${index + 1}</div>
                  <div>
                    <h3 class="font-bold text-sm sm:text-base">${artist.name}</h3>
                    <p class="text-xs sm:text-sm text-base-content/70">${artist.genres.slice(0, 2).join(", ") || "Sin géneros"}</p>
                  </div>
                </div>
                <div class="mt-2">
                  <div class="flex justify-between text-xs sm:text-sm">
                    <span>Popularidad:</span>
                    <span class="font-bold">${artist.popularity}%</span>
                  </div>
                  <div class="flex justify-between text-xs sm:text-sm">
                    <span>Seguidores:</span>
                    <span class="font-bold">${artist.followers.total.toLocaleString()}</span>
                  </div>
                </div>
              </div>
            </div>
          `
            )
            .join("");
        }
      } catch (e) {
        console.error("Error loading top artists:", e);
      }
    }
  </script>
</MainLayout>
