---
import  Plays  from "../components/icons/plays.astro";
import  Music2  from "../components/icons/music.astro";
---


<template class="overflow-hidden bg-card hover:bg-accent/50 transition-colors group template-top-song-card">
      <div class="flex gap-4 p-4">
        {/* Imagen del álbum */}
        <div class="relative shrink-0">
          <div class="relative w-24 h-24 rounded-md overflow-hidden bg-muted">
            <!-- <Image src={image || "/placeholder.svg"} alt={`${name} album cover`} fill class="object-cover" /> -->
             <img src="" alt=""  class="object-cover track-image" />
            <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
              <Plays class="w-8 h-8 text-white" fill="white" />
            </div>
          </div>
          {/* Badge de Top */}
          <div class="top-track absolute -top-2 -right-2 bg-primary text-primary-foreground rounded-full w-8 h-8 flex items-center justify-center text-xs font-bold shadow-lg">
            
          </div>
        </div>

        {/* Información de la canción */}
        <div class="flex-1 min-w-0">
          <div class="flex items-start justify-between gap-2 mb-2">
            <div class="min-w-0">
              <h3 class="font-semibold text-foreground text-lg line-clamp-1 track-name"></h3>
              <p class="text-sm text-muted-foreground line-clamp-1 artist-name"></p>
            </div>
          </div>

          {/* Estadísticas */}
          <div class="flex flex-wrap gap-4 mt-3">
            <div class="flex items-center gap-2">
              <div class="w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center">
                <Plays class="w-4 h-4 text-primary" />
              </div>
              <div>
                <p class="text-xs text-muted-foreground">Plays</p>
                <p class="text-sm font-semibold text-foreground track-count"></p>
              </div>
            </div>

            <div class="flex items-center gap-2">
              <div class="w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center">
                <Music2 class="w-4 h-4 text-primary" />
              </div>
              <div>
                <p class="text-xs text-muted-foreground">Time</p>
                <p class="text-sm font-semibold text-foreground track-duration">
                  
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </template>